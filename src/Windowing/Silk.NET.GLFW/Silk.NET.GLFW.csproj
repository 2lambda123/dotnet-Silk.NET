<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
      <TargetFrameworks>netstandard2.0;netstandard2.1;netcoreapp3.1;net5.0;net6.0</TargetFrameworks>
      <RootNamespace>Silk.NET.GLFW</RootNamespace>
      <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <DefineConstants Condition="'$(TargetFramework)' == 'net6.0'">$(DefineConstants);WASM_SUPPORT</DefineConstants>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="Ultz.Native.GLFW" Version="3.3.2.1" />
        <NativeFileReference Include="native\glfw3-wasm.c" Condition=" '$(TargetFramework)' == 'net6.0' " />
    </ItemGroup>

    <Import Project="..\..\..\build\props\bindings.props" />
</Project>
