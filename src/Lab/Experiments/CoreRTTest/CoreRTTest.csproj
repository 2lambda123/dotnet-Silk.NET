<Project Sdk="Microsoft.NET.Sdk">

    <!-- .NET properties -->
    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net7.0</TargetFramework>
        <RootNamespace>Tutorial</RootNamespace>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <PublishAot>true</PublishAot>
        <PublishTrimmed>true</PublishTrimmed>
        <TrimMode>full</TrimMode>
    </PropertyGroup>

    <!-- Some tutorials need ImageSharp -->
    <ItemGroup>
        <PackageReference Include="SixLabors.ImageSharp" Version="2.1.7" />
    </ItemGroup>

    <!-- Reference Silk.NET -->
    <ItemGroup>
        <ProjectReference Include="..\..\..\Core\Silk.NET\Silk.NET.csproj" />
        <ProjectReference Include="..\..\..\OpenGL\Extensions\Silk.NET.OpenGL.Extensions.ARB\Silk.NET.OpenGL.Extensions.ARB.csproj" />
    </ItemGroup>

    <ItemGroup>
        <None Update="lighting.frag">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Update="Shader.frag">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Update="Shader.vert">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Update="silkSpecular.png">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Update="silkBoxed.png">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
    </ItemGroup>

</Project>
